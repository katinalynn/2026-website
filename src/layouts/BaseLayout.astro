---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

const navItems = [
  { label: 'About', href: '/about/' },
  { label: 'Services', href: '/services/' },
  { label: 'Writing', href: '/writing/' },
  { label: 'Media', href: '/media/' },
  { label: 'Contact', href: '/contact/' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Katina L. Rogers, Inkcap Consulting</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;0,700;1,400;1,600&family=Libre+Franklin:ital,wght@0,300;0,400;0,500;0,600;1,400&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header class="site-header">
      <div class="site-container site-header-inner">
        <a class="site-brand" href="/">
          <img src="/images/logo.webp" alt="Inkcap Consulting â€” Katina L. Rogers" />
        </a>
        <nav>
          <ul>
            {navItems.map(({ label, href }) => (
              <li>
                <a href={href} aria-current={currentPath === href ? 'page' : undefined}>
                  {label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </header>

    <main class="site-container">
      <slot />
    </main>

    <footer>
      <div class="site-container">
        <p>
          CC-BY Katina Rogers 2026 &middot;
          <a href="/contact/">Contact</a> &middot;
          <a href="https://buttondown.email/katina">Subscribe</a>
        </p>
      </div>
    </footer>
  </body>
</html>
